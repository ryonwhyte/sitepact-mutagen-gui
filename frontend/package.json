{
  "name": "sitepact-mutagen-gui",
  "private": true,
  "version": "1.0.0",
  "description": "Sitepact Mutagen GUI - A modern desktop application for managing Mutagen file synchronization",
  "main": "electron/main.js",
  "author": {
    "name": "Sitepact - Ryon Whyte",
    "email": "contact@sitepact.com"
  },
  "homepage": "https://github.com/sitepact/sitepact-mutagen-gui",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=1 electron .",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.sitepact.mutagengui",
    "productName": "Sitepact Mutagen GUI",
    "directories": {
      "output": "../builds"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*",
      "!node_modules",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!venv",
          "!__pycache__",
          "!*.pyc"
        ]
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "icon": "public/icons/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icons/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.3.1",
    "@mui/material": "^6.3.1",
    "@tanstack/react-query": "^5.62.14",
    "axios": "^1.7.9",
    "electron-is-dev": "^3.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^5.0.4",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "electron-reload": "^1.5.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.19.0",
    "vite": "^7.1.9"
  }
}